<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="group.hashtag.projectelo">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_elo_rounded_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_elo_rounded"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name=".Activities.HomeActivity"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".Activities.Splashscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.shortcuts"
                android:resource="@xml/shortcuts" />
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/Theme.AppCompat.Light" />
        <activity
            android:name=".Activities.ForgotPassword"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.UserProfile"
            android:label="@string/app_name"
            android:parentActivityName=".Activities.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.FeaturedArticle"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.OpenSourceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.Register_Activity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.NewReviewActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.ProductReview"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".Activities.Wishlist"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.WishlistAddItem"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.OtherUserActivities.ViewUserProfile"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".Activities.FollowerList" />
        <activity
            android:name=".Activities.UserDeviceActivity"
            android:label="@string/title_activity_user_device"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.UserAddDevices"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.ProfileSetup"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />
        <activity
            android:name=".Activities.EditUserProfile"
            android:theme="@style/MyMaterialTheme" />
        <activity android:name=".Activities.OtherUserActivities.OtherUserWishlist" />
        <activity android:name=".Activities.OtherUserActivities.OtherUserFollowers" />
        <activity android:name=".Activities.OtherUserActivities.OtherUserDevicesActivity" />
        <activity
            android:name=".Activities.SelectPhotoActivity"
            android:label="@string/title_activity_select_photo"
            android:screenOrientation="portrait"
            android:theme="@style/MyMaterialTheme" />

        <activity android:name=".Activities.OnboardingAvtivity" />
    </application>

</manifest>
